<%= render 'shared/redirect_not_login' %>
<style>
  th,td {
  border: solid 0px;
  padding: 1px;
}

  label {
  font-size:large;
  }

  .profile_form {
  margin-left: auto;
  margin-right: auto;
  width: 50%;
  text-align:center;
  }

  .submit_btn {
  width:50%;
  }

  .error_message {
  color: #ff0044;
  font-size:small;
  }

  .message {
  font-size:small;
  }
</style>

<% provide(:title, 'プロフィール') %>
<h1>プロフィール</h1>

<% if flash[:user_message] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:user_message] %>
  </div>
<% end %>

<div class="row">
  <div class="span6 offset3">
    <table class="profile_form">
      <tr>
        <td><%= label_tag :login_id, "ログインID" %></td>
      </tr>
      <tr>
      <td><%= text_field_tag :login_id, @user.login_id, :disabled => true %></td>
      </tr>

     <tr>
      <td><%= label_tag :nickname, 'ニックネーム' %></td>
      <tr></tr>
      <td><%= text_field_tag :nickname, @user.nickname, :disabled => true %></td>
     </tr>

      <tr>
        <td><%= label_tag :mail, "メールアドレス" %></td>
      <tr></tr>
        <td><%= email_field_tag :mail, @user.mail, :disabled => true %></td>
      </tr>

      <tr>
        <td><%= link_to "プロフィール更新", 'profile_edit' %></td>
      </tr>
      <tr>
        <td><%= link_to "パスワード更新", 'password_edit' %></td>
      </tr>
      <tr>
        <td><%= link_to "サービスの利用をやめる", 'user/delete' %></td>
      </tr>

    </table>
  </div>
</div>
